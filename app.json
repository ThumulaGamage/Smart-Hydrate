{
  "expo": {
    "name": "SmartHydrate",
    "slug": "smart-hydrate",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "smarthydrate",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "SmartHydrate needs access to Bluetooth to communicate with your smart water bottle and track your hydration.",
        "NSBluetoothPeripheralUsageDescription": "SmartHydrate needs access to Bluetooth to connect to your smart water bottle.",
        "NSLocationWhenInUseUsageDescription": "SmartHydrate needs location permission for Bluetooth Low Energy device discovery."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon2.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.SmartHydrate",
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-dev-client",
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon2.png",
          "imageWidth": 300,
          "resizeMode": "contain",
          "backgroundColor": "#0066CC",
          "dark": {
            "image": "./assets/images/icon2.png",
            "backgroundColor": "#003366"
          }
        }
      ],
      "react-native-ble-plx"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "owner": "thumula",
    "extra": {
      "router": {}
    }
  }
}